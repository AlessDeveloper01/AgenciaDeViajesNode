extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5= pagina

        include ./layout/bloque_testimoniales


        div.row

            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial

                if(errores) 
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje


            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", name="nombre", class="form-control", placeholder="Tu Nombre", value=nombre)
                        .form-group 
                            label(for="correo") Correo Electronico
                            input#correo(type="text", name="correo", class="form-control", placeholder="Tu correo", value=correo)
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", rows="3", placeholder="Tu Mensaje", class="form-control")= mensaje

                        input.btn.btn-success.btn-block(type="submit", value="Enviar")